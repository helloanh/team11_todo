<h1>Login</h1>

<div class="container">
	<%= form_tag '/login' do %>
		<div class="form-group row">
			<label for="login" class="col-sm-2 col-form-label">
				Login
			</label>
			<div class="col-sm-10">
				<%= text_field_tag :login %>
			</div>
			<label for="pw" class="col-sm-2 col-form-label">
				Password
			</label>
			<div class="col-sm-10">
		 		<%= password_field_tag :password %>
		 	</div>
					</div>
		<%= submit_tag("Submit", :id=>"button", :class=>"btn", :name=>"submit") %>
	<% end %>
</div>

