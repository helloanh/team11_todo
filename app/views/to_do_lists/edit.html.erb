<div class="container">
  <h1 class="text-center">Edit Todo List</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <% @to_do_list.errors.each do |attr, msg| %>
        <li>
          <%= @to_do_list.errors.full_messages_for(attr).first if @user.errors[attr].first == msg %>
        </li>
      <% end %>

      <%= form_for(@to_do_list) do |f| %>

        <%= f.label :list_due_date %>
        <%= f.date_field :list_due_date, class: 'form-control' %>

        <%= f.label :list_name %>
        <%= f.text_field :list_name, class: 'form-control' %> 
      <br><br>
        <%= f.submit "Update Todo List", class: "btn btn-primary" %>
      <% end %>


    </div>
  </div>
</div>