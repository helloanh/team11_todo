<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      
      <h1>Edit Todo Item</h1>
		<%= form_for([@to_do_list, @to_do_item]) do |f| %>

		  <%= label_tag(:task_title, "Task Title:") %>
		  <%= f.text_field :task_title %></br>


	  	<div class="form-group">
	  	  <%= label_tag(:description, "Description:") %>
		  <%= f.text_field :description %>
		</div>

          <%= f.label "Task completed?" %> <br />
          <%= f.check_box :done %> <br />

		  <%= label_tag(:due_date, "Due Date:") %> 
		  <%= f.date_field :due_date, class: 'form-control' %></br>
		  <%= f.submit "Update Todo Item" %>
		<% end %>

    </div>
  </div>
</div>