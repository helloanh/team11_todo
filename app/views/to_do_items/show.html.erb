<div class="container">
	<h1><%= @to_do_item['task_title']%></h1>
	<h3>Due on: <%= @to_do_item['due_date']%></h3>
	<h3>Status: 
		<%= @to_do_item['done'] %> 
	</h3>
	
	<p><%= @to_do_item['description'] %> </p>

	<button><%= link_to "Edit Todo Item ", edit_to_do_list_to_do_item_path(@to_do_list, @to_do_item)  %></button>
	<button>
		<%= link_to "Delete Todo Item ", to_do_list_to_do_item_path(@to_do_list, @to_do_item), method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } %>
		  
	</button>
	<button><%= link_to "Back", :back %></button>


</div>

 