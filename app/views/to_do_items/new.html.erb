<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h1>Create a New Todo Item</h1>
        <p class="flash-notice"><%= params[:notice] %></p>
		<%= form_for([@to_do_list, @to_do_item]) do |f| %>

		  <%= label_tag(:task_title, "Task Title:") %>
		  <%= f.text_field :task_title %></br>

		 
		  <%= label_tag(:due_date, "Due Date:") %> 
		  <%= f.date_field :due_date, class: 'form-control' %></br>
		  <%= f.submit "Create Todo Item" %>
		<% end %>

    </div>
  </div>
</div>